# /etc/profile.d/proxy.sh - set proxy stuff
export HTTP_PROXY=<%= @http_proxy_host %>:<%= @http_proxy_port %>
export HTTPS_PROXY=<%= @https_proxy_host %>:<%= @https_proxy_port %>
export SOCKS_PROXY=<%= @socks_proxy_host %>:<%= @socks_proxy_port %>
export http_proxy=<%= @http_proxy_host %>:<%= @http_proxy_port %>
export https_proxy=<%= @https_proxy_host %>:<%= @https_proxy_port %>
export socks_proxy=<%= @socks_proxy_host %>:<%= @socks_proxy_port %>
<% if has_variable?("ipaddress_eth1") %><% then %>
export no_proxy=127.0.0.1,localhost,<%= hostname %>,<%= fqdn %>,<%= ipaddress %>,<%= @no_proxy_domains %>,<%= ipaddress_eth1 %>
export NO_PROXY=127.0.0.1,localhost,<%= hostname %>,<%= fqdn %>,<%= ipaddress %>,<%= @no_proxy_domains %>,<%= ipaddress_eth1 %>
<% else %>
export no_proxy=127.0.0.1,localhost,<%= hostname %>,<%= fqdn %>,<%= ipaddress %>,<%= @no_proxy_domains %>
export NO_PROXY=127.0.0.1,localhost,<%= hostname %>,<%= fqdn %>,<%= ipaddress %>,<%= @no_proxy_domains %>
<% end %>
