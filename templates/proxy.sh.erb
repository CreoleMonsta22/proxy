PATH="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/games"
<% if @http_proxy_host != "nil" %><% then %>
export http_proxy=<%= @http_proxy_host %>:<%= @http_proxy_port %>
export HTTP_PROXY=<%= @http_proxy_host %>:<%= @http_proxy_port %>
<% domains = "" %>
<% @no_proxy_domains.split(',').each do |val| %>
<% domains+=val + ','  %>
<% end %>
<% if has_variable?("ipaddress_eth1") %><% then %>
<% server_ip = @ipaddress_eth1 %>
<% else %>
<% server_ip = @ipaddress_eth0 %>
<% end %>
export no_proxy=127.0.0.1,localhost,<%= hostname %>,<%= fqdn %>,<%= ipaddress %>,<%= server_ip %>,<%= domains %>
export NO_PROXY=127.0.0.1,localhost,<%= hostname %>,<%= fqdn %>,<%= ipaddress %>,<%= server_ip %>,<%= domains %>
<% end %>
<% if @https_proxy_host != "nil" %><% then %>
export https_proxy=<%= @http_proxy_host %>:<%= @http_proxy_port %>
export HTTPS_PROXY=<%= @https_proxy_host %>:<%= @https_proxy_port %>
<% end %>
<% if @socks_proxy_host != "nil" %><% then %>
export socks_proxy=<%= @socks_proxy_host %>:<%= @socks_proxy_port %>
export SOCKS_PROXY=<%= @socks_proxy_host %>:<%= @socks_proxy_port %>
<% end %>
